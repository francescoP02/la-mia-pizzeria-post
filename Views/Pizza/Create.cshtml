@{
    ViewData["Title"] = "Add Pizza";
    Layout = "_Layout";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <form>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="Name">
            <label for="floatingInput">Name</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingPassword" placeholder="Description">
            <label for="floatingPassword">Description</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" placeholder="Photo">
            <label for="floatingInput">Photo</label>
        </div>
        <div class="form-floating mb-3">
            <input type="number" class="form-control" id="floatingPassword" placeholder="Price">
            <label for="floatingPassword">Price</label>
        </div>

        <button action="submit">Aggiungi</button>
    </form>
</div>
