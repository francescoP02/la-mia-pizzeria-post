@model Pizza

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <h1>@Model.Name</h1>
    <img src="/img/@Model.Photo" class="img-fluid" alt="@Model.Name">
    <p class="card-text">@Model.Description</p>
    <p class="card-text">Price: @Model.Price €</p>
</div>
